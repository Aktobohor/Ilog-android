<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainChallengeView"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10sp" >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20sp"
            android:paddingLeft="20sp" >

            <TextView
                android:id="@+id/challengeStatusFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/challengeStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="question+picture" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20sp"
            android:paddingLeft="20sp" >

            <TextView
                android:id="@+id/challengeResultFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/challengeResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="22/02/2018"
                android:textSize="16sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20sp"
            android:paddingLeft="20sp" >

            <TextView
                android:id="@+id/challengeRewardFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/challengeReward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10/03/2018"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:paddingRight="20sp"
            android:paddingLeft="20sp" >

            <TextView
                android:id="@+id/challengeRulesFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rules: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/challengeRules"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollHorizontally="true"
                android:maxLines="2"
                android:autoLink="web"
                android:minLines="1"
                android:singleLine="false"
                android:lines="1"
                android:text=""
                android:textSize="16sp" />
        </TableRow>
        <TableRow
            android:id="@+id/descriptionRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20sp"
            android:paddingLeft="20sp" >

            <TextView
                android:id="@+id/challengeDescriptionFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Description: " />

            <TextView
                android:id="@+id/challengeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true"
                android:layout_weight="1"
                android:maxLines="7"
                android:scrollbars = "vertical"
                android:text="whateverwhateverwhateverwhateverwhateverwhateverwhateverwhateverwhateverwhateverwhateverwhateverwhateverwhatever"
                android:textSize="16sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:paddingRight="20sp">

            <ListView
                android:id="@+id/listViewContributions"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
</LinearLayout>