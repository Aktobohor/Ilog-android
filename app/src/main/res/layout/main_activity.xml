<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_profile_detail"
        android:layout_width="match_parent"
        android:layout_height="125sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp">
        <LinearLayout
            android:id="@+id/layout_profile_image"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:layout_marginTop="12sp"
                android:layout_marginBottom="8sp"
                android:background="@drawable/myshape_profile_picture"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="NOME COGNOME"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="indirizzo@email.it"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/survey_number"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="3"
                        android:gravity="bottom|center"
                        android:text="10"
                        android:textStyle="bold"
                        android:textSize="23sp"/>
                    <TextView
                        android:id="@+id/survey_text"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="2"
                        android:gravity="top|center"
                        android:text="Survey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/done_number"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="3"
                        android:gravity="bottom|center"
                        android:text="5"
                        android:textStyle="bold"
                        android:textSize="23sp"/>
                    <TextView
                        android:id="@+id/done_text"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="2"
                        android:gravity="top|center"
                        android:text="Done"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/level_number"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="3"
                        android:gravity="bottom|center"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="23sp"/>
                    <TextView
                        android:id="@+id/level_text"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="2"
                        android:gravity="top|center"
                        android:text="Level"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_profile_detail">
        <ScrollView
            android:id="@+id/scrollview_imagebutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ScrollView>
    </LinearLayout>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:id="@+id/navList"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            android:background="#ffeeeeee"/>
    </android.support.v4.widget.DrawerLayout>





</RelativeLayout>