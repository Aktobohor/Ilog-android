<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_open_menu"
                android:layout_width="30sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_menu_notification_bar"
                android:background="@null"
                android:paddingTop="10sp"
                android:clickable="true"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_profile_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            >
            <LinearLayout
                android:id="@+id/layout_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:background="@drawable/myshape_profile_picture"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10sp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="NOME COGNOME"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="indirizzo@email.it"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/survey_number"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="3"
                            android:gravity="bottom|center"
                            android:text="10"
                            android:textStyle="bold"
                            android:textSize="23sp"/>
                        <TextView
                            android:id="@+id/survey_text"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="2"
                            android:gravity="top|center"
                            android:text="Survey"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/done_number"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="3"
                            android:gravity="bottom|center"
                            android:text="5"
                            android:textStyle="bold"
                            android:textSize="23sp"/>
                        <TextView
                            android:id="@+id/done_text"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="2"
                            android:gravity="top|center"
                            android:text="Done"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/level_number"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="3"
                            android:gravity="bottom|center"
                            android:text="6"
                            android:textStyle="bold"
                            android:textSize="23sp"/>
                        <TextView
                            android:id="@+id/level_text"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="2"
                            android:gravity="top|center"
                            android:text="Level"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_profile_detail"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp">
                    <ImageButton
                        android:id="@+id/imagebutton_graph"
                        android:layout_width="0sp"
                        android:layout_height="125sp"
                        android:layout_weight="1"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/home_shape_imagebutton"
                        android:src="@drawable/image_menu_graph"/>

                    <ImageButton
                        android:id="@+id/imagebutton_survey"
                        android:layout_width="0sp"
                        android:layout_height="125sp"
                        android:layout_weight="1"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:background="@drawable/home_shape_imagebutton"
                        android:src="@drawable/image_menu_survey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp">
                    <ImageButton
                        android:id="@+id/imagebutton_settings"
                        android:layout_width="0sp"
                        android:layout_height="125sp"
                        android:layout_weight="1"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/home_shape_imagebutton"
                        android:src="@drawable/image_menu_settings"/>

                    <ImageButton
                        android:id="@+id/imagebutton_profile"
                        android:layout_width="0sp"
                        android:layout_height="125sp"
                        android:layout_weight="1"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="20sp"
                        android:background="@drawable/home_shape_imagebutton"
                        android:src="@drawable/image_menu_profile" />
                </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffeeeeee" />
</android.support.v4.widget.DrawerLayout>